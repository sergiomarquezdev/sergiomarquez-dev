---
import type { CvData } from "../data/cv";
import LinkIcon from "./icons/LinkIcon.astro";

interface Props {
	certifications: CvData["certifications"];
}

const { certifications } = Astro.props;
---

<div class="certifications">
  <h2 class="section-title">Certifications</h2>
  <ul class="cert-list">
    {certifications.map((cert) => (
      <li>
        <a
          href={cert.url || '#'}
          class="cert-card"
          target={cert.url ? "_blank" : undefined}
          rel={cert.url ? "noopener noreferrer" : undefined}
          aria-label={`View ${cert.name} certificate`}
        >
          <div class="cert-content">
            <h3 class="cert-name">
              {cert.name}
              {cert.url && <LinkIcon class="link-icon" />}
            </h3>
            <p class="cert-meta">
              {cert.issuer}
              <span class="cert-separator">-</span>
              {cert.date}
            </p>
          </div>
        </a>
      </li>
    ))}
  </ul>
</div>

<style>
  .certifications {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-title {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--primary-text);
  }

  @media (min-width: 1024px) {
    .section-title {
      display: none;
    }
  }

  .cert-list {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .cert-card {
    display: block;
    padding: 1.25rem 1.5rem;
    margin: -0.75rem -1.5rem;
    border-radius: 0.5rem;
    transition: background-color 0.2s ease-in-out;
    cursor: pointer;
  }

  .cert-card:hover {
    background-color: var(--accent-muted);
  }

  .cert-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cert-name {
    margin: 0;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--primary-text);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    line-height: 1.4;
    transition: color 0.2s ease-in-out;
  }

  .cert-card:hover .cert-name {
    color: var(--accent);
  }

  .link-icon {
    width: 0.75rem;
    height: 0.75rem;
    flex-shrink: 0;
    transition: transform 0.2s ease-in-out;
  }

  .cert-card:hover .link-icon {
    transform: translate(2px, -2px);
  }

  .cert-meta {
    margin: 0;
    font-size: 0.8rem;
    color: var(--tertiary-text);
  }

  .cert-separator {
    margin: 0 0.25rem;
  }
</style>
