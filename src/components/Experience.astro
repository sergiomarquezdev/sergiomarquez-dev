---
import type { CvData } from "../data/cv";

interface Props {
	experience: CvData["experience"];
}

const { experience } = Astro.props;
const MAX_HIGHLIGHTS = 3;
---

<div class="experience">
  <h2 class="section-title">Experience</h2>
  <div class="roles">
    {experience.map((role) => (
      <div class="role-card">
        <header class="role-header">
          <span class="role-period">{role.period}</span>
          <div class="role-info">
            <h3 class="role-title">
              {role.role}
              <span class="role-separator">-</span>
              <span class="role-company">{role.company}</span>
            </h3>
            <p class="role-summary">{role.summary}</p>
            <ul class="role-highlights">
              {role.highlights.slice(0, MAX_HIGHLIGHTS).map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        </header>
      </div>
    ))}
  </div>
</div>

<style>
  .experience {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-title {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--primary-text);
  }

  @media (min-width: 1024px) {
    .section-title {
      display: none;
    }
  }

  .roles {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .role-card {
    display: block;
    padding: 1.5rem;
    margin: -1rem -1.5rem;
    border-radius: 0.5rem;
    transition: background-color 0.2s ease-in-out;
    cursor: default;
  }

  .role-card:hover {
    background-color: var(--accent-muted);
  }

  .role-header {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  @media (min-width: 640px) {
    .role-header {
      grid-template-columns: 140px 1fr;
      gap: 1rem;
    }
  }

  .role-period {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: var(--tertiary-text);
    padding-top: 0.25rem;
  }

  .role-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .role-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
    color: var(--primary-text);
    line-height: 1.4;
    transition: color 0.2s ease-in-out;
  }

  .role-card:hover .role-title {
    color: var(--accent);
  }

  .role-separator {
    color: var(--tertiary-text);
    margin: 0 0.25rem;
  }

  .role-company {
    color: var(--secondary-text);
    font-weight: 400;
  }

  .role-summary {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--secondary-text);
  }

  .role-highlights {
    margin: 0.5rem 0 0 0;
    padding-left: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    color: var(--secondary-text);
    font-size: 0.8rem;
    line-height: 1.5;
  }

  .role-highlights li {
    padding-left: 0.25rem;
  }

  .role-highlights li::marker {
    color: var(--accent);
  }
</style>
