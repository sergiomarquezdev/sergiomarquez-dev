---
import type { CvData } from "../data/cv";

interface Props {
  experience: CvData["experience"];
}

const { experience } = Astro.props as Props;
---

<section class="experience">
  <h2 class="title">Experience</h2>
  <div class="roles">
    {experience.map((role) => (
      <article class="role">
        <header class="role-header">
          <div>
            <h3 class="role-title">{role.role}</h3>
            <p class="role-company">{role.company}</p>
          </div>
          <span class="role-period">{role.period}</span>
        </header>
        <p class="role-summary">{role.summary}</p>
        <ul class="role-highlights">
          {role.highlights.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </article>
    ))}
  </div>
</section>

<style>
  .experience {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2rem 0;
  }

  .title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    letter-spacing: -0.01em;
  }

  .roles {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .role {
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .role-header {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: flex-start;
  }

  .role-title {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .role-company {
    margin: 0.25rem 0 0 0;
    font-size: 0.85rem;
    color: var(--secondary-text);
  }

  .role-period {
    font-size: 0.8rem;
    color: var(--secondary-text);
    white-space: nowrap;
  }

  .role-summary {
    margin: 0;
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--secondary-text);
  }

  .role-highlights {
    margin: 0;
    padding-left: 1.2rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--secondary-text);
    font-size: 0.85rem;
    line-height: 1.5;
  }

  @media (max-width: 640px) {
    .role {
      padding: 1.25rem;
    }

    .role-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .role-period {
      font-size: 0.75rem;
    }
  }
</style>
