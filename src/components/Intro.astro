---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import XIcon from "./icons/XIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
---

<section class="flex flex-col gap-y-10 py-8">
    <div class="flex flex-col gap-y-4">
        <img
            src="/images/avatar.webp"
            alt="Sergio Márquez Pérez Avatar"
            class="w-32 h-32 rounded-lg mb-4"
        />
        <h1 class="text-2xl font-bold">Sergio Márquez Pérez</h1>
        <h2 class="text-lg text-secondary-text">AI/ML & Backend Developer</h2>
        <div class="flex items-center gap-4 mt-2">
            <a
                href="https://github.com/sergiomarquezdev"
                target="_blank"
                aria-label="GitHub"
            >
                <GitHubIcon
                    class="w-6 h-6 text-secondary-text hover:text-primary-text"
                />
            </a>
            <a
                href="https://www.linkedin.com/in/smarquezp/"
                target="_blank"
                aria-label="LinkedIn"
            >
                <LinkedInIcon
                    class="w-6 h-6 text-secondary-text hover:text-primary-text"
                />
            </a>
            <a
                href="https://twitter.com/smarquezp"
                target="_blank"
                aria-label="X/Twitter"
            >
                <XIcon
                    class="w-6 h-6 text-secondary-text hover:text-primary-text"
                />
            </a>
            <a
                href="mailto:smarquez@smarquez.dev"
                target="_blank"
                aria-label="Email"
            >
                <EmailIcon
                    class="w-6 h-6 text-secondary-text hover:text-primary-text"
                />
            </a>
        </div>
    </div>

    <div class="flex flex-col gap-y-4">
        <p class="text-lg">
            AI/ML Engineer crafting intelligent backend systems and exploring
            the frontiers of machine learning.
        </p>
    </div>

    <div class="flex flex-col gap-y-4">
        <h2 class="text-xl font-bold">What I do</h2>
        <ul class="list-disc list-inside flex flex-col gap-y-2">
            <li>Building and scaling AI-powered applications.</li>
            <li>
                Creating educational content on YouTube about software
                development and AI.
            </li>
            <li>
                Continuously learning and building personal projects in my free
                time.
            </li>
        </ul>
    </div>
</section>
