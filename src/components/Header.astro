---
import EmailIcon from './icons/EmailIcon.astro';
import GitHubIcon from './icons/GitHubIcon.astro';
import LinkedInIcon from './icons/LinkedInIcon.astro';
import XIcon from './icons/XIcon.astro';
import YouTubeIcon from './icons/YouTubeIcon.astro';
---

<header class='header'>
  <div class='container'>
    <div class='header-content'>
      <!-- COLUMNA IZQUIERDA -->
      <div class='text-section'>
        <h1 class='name'>Sergio Márquez Pérez</h1>
        <p class='title'>Automation • AI/ML • Backend Developer</p>
      </div>

      <!-- COLUMNA DERECHA -->
      <nav class='social-nav'>
        <!-- YouTube -->
        <a
          href='https://www.youtube.com/@sergiomarquezdev'
          class='social-link'
          aria-label='YouTube'
          target='_blank'
          rel='noopener noreferrer'
        >
          <YouTubeIcon class='icon' />
        </a>

        <!-- GitHub -->
        <a
          href='https://github.com/sergiomarquezdev'
          class='social-link'
          aria-label='GitHub'
          target='_blank'
          rel='noopener noreferrer'
        >
          <GitHubIcon class='icon' />
        </a>

        <!-- LinkedIn -->
        <a
          href='https://linkedin.com/in/sergio-marquez-perez/'
          class='social-link'
          aria-label='LinkedIn'
          target='_blank'
          rel='noopener noreferrer'
        >
          <LinkedInIcon class='icon' />
        </a>

        <!-- Twitter/X -->
        <a
          href='https://x.com/sergiomzdev'
          class='social-link'
          aria-label='X (Twitter)'
          target='_blank'
          rel='noopener noreferrer'
        >
          <XIcon class='icon' />
        </a>

        <!-- Email -->
        <a
          href='mailto:cntacto@sergiomarquez.dev'
          class='social-link'
          aria-label='Email'
          target='_blank'
          rel='noopener noreferrer'
        >
          <EmailIcon class='icon' />
        </a>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    width: 100%;
    border-bottom: 1px solid var(--border-color);
  }

  .container {
    max-width: 768px;
    margin: 0 auto;
    padding: 3rem 0rem 1rem 0rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .text-section {
    display: flex;
    flex-direction: column;
  }

  .name {
    color: var(--primary-text);
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
    font-family: var(--font-family-sans);
  }

  .title {
    color: var(--secondary-text);
    font-size: 0.875rem;
    margin: 0;
    line-height: 1.2;
    margin-top: 0.25rem;
    font-family: var(--font-family-sans);
  }

  .social-nav {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-link {
    color: var(--secondary-text);
    transition: color 0.2s ease-in-out;
    text-decoration: none;
  }

  .social-link:hover {
    color: var(--primary-text);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .container {
      padding: 1rem 1rem;
    }

    .social-nav {
      gap: 0.75rem;
    }

    .name {
      font-size: 1rem;
    }

    .title {
      font-size: 0.8rem;
    }
  }
</style>
