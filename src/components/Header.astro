---
import { cv } from "../data/cv";
import EmailIcon from "./icons/EmailIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import XIcon from "./icons/XIcon.astro";
import YouTubeIcon from "./icons/YouTubeIcon.astro";

const { basics } = cv;

const links = [
	{
		href: basics.urls.linkedin,
		label: "LinkedIn",
		Icon: LinkedInIcon,
	},
	{
		href: basics.urls.github,
		label: "GitHub",
		Icon: GitHubIcon,
	},
	{
		href: basics.urls.youtube,
		label: "YouTube",
		Icon: YouTubeIcon,
	},
	{
		href: basics.urls.x,
		label: "X (Twitter)",
		Icon: XIcon,
	},
];

const socialLinks = links.filter(Boolean);
---

<header class="header">
  <div class="container">
    <div class="header-content">
      <div class="text-section">
        <h1 class="name">{basics.name}</h1>
        <p class="title">{basics.tagline}</p>
      </div>

      <nav class="social-nav">
        {
          socialLinks.map(({ href, label, Icon }) => (
            <a
              href={href}
              class="social-link"
              aria-label={label}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon class="icon" />
            </a>
          ))
        }
        <a
          href={`mailto:${basics.email}`}
          class="social-link"
          aria-label="Email"
          target="_blank"
          rel="noopener noreferrer"
        >
          <EmailIcon class="icon" />
        </a>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    width: 100%;
    border-bottom: 1px solid var(--border-color);
  }

  .container {
    max-width: 768px;
    margin: 0 auto;
    padding: 3rem 0 1rem 0;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    gap: 1.5rem;
  }

  .text-section {
    display: flex;
    flex-direction: column;
  }

  .name {
    color: var(--primary-text);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
    font-family: var(--font-family-sans);
  }

  .title {
    color: var(--secondary-text);
    font-size: 0.95rem;
    margin: 0.25rem 0 0 0;
    line-height: 1.3;
    font-family: var(--font-family-sans);
  }

  .social-nav {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-link {
    color: var(--secondary-text);
    transition: color 0.2s ease-in-out;
    text-decoration: none;
  }

  .social-link:hover {
    color: var(--primary-text);
  }

  .icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  @media (max-width: 640px) {
    .container {
      padding: 1.5rem 1rem 1rem 1rem;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .name {
      font-size: 1.1rem;
    }

    .title {
      font-size: 0.85rem;
    }

    .social-nav {
      gap: 0.75rem;
    }
  }
</style>
