---
import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import EmailIcon from "./icons/EmailIcon.astro";
import XIcon from "./icons/XIcon.astro";
---

<header class="flex justify-between items-center w-full">
    <div class="flex items-center gap-3 flex-shrink-0">
        <img
            src="/images/avatar.webp"
            alt="Sergio Márquez Pérez Avatar"
            class="w-8 h-8 rounded-full border border-white/10"
        />
        <div class="flex flex-col flex-shrink-0">
            <h2 class="text-sm font-medium leading-none">
                Sergio Márquez Pérez
            </h2>
            <p class="text-xs text-secondary-text leading-none mt-0.5">
                AI/ML & Backend Developer
            </p>
        </div>
    </div>
    <div class="flex items-center gap-3 flex-shrink-0">
        <a
            href="https://github.com/sergiomarquezdev"
            target="_blank"
            aria-label="GitHub"
        >
            <GitHubIcon
                class="w-4 h-4 text-secondary-text hover:text-primary-text"
            />
        </a>
        <a
            href="https://www.linkedin.com/in/smarquezp/"
            target="_blank"
            aria-label="LinkedIn"
        >
            <LinkedInIcon
                class="w-4 h-4 text-secondary-text hover:text-primary-text"
            />
        </a>
        <a
            href="https://twitter.com/smarquezp"
            target="_blank"
            aria-label="X/Twitter"
        >
            <XIcon
                class="w-4 h-4 text-secondary-text hover:text-primary-text"
            />
        </a>
        <a
            href="mailto:smarquez@smarquez.dev"
            target="_blank"
            aria-label="Email"
        >
            <EmailIcon
                class="w-4 h-4 text-secondary-text hover:text-primary-text"
            />
        </a>
    </div>
</header>
