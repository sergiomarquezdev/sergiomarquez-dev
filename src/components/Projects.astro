---
import type { CvData } from "../data/cv";
import { getLocale, t } from "../i18n/index";
import LinkIcon from "./icons/LinkIcon.astro";

interface Props {
	projects: CvData["projects"];
}

const { projects } = Astro.props;
const locale = getLocale(Astro.currentLocale);
---

<div class="projects">
  <h2 class="section-title">{t(locale, "section.projects")}</h2>
  <div class="project-list">
    {projects.map((project) => (
      <a
        href={project.url || (project.github && !project.private ? project.github[0] : '#')}
        class="project-card card-interactive"
        target={project.url || (project.github && !project.private) ? "_blank" : undefined}
        rel={project.url || (project.github && !project.private) ? "noopener noreferrer" : undefined}
        aria-label={`${t(locale, "aria.viewProject")} ${project.name}`}
      >
        <div class="project-content">
          <h3 class="project-name">
            {project.name}
            {(project.url || (project.github && !project.private)) && (
              <LinkIcon class="link-icon" />
            )}
          </h3>
          <p class="project-headline">{project.headline}</p>
          <ul class="project-stack">
            {project.stack.map((tech) => (
              <li>{tech}</li>
            ))}
          </ul>
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  .projects {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .project-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .project-card {
    padding: 1rem 1.5rem;
    cursor: pointer;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .project-name {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
    color: var(--primary-text);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease-in-out;
  }

  .project-card:hover .project-name {
    color: var(--accent);
  }

  .link-icon {
    width: 0.875rem;
    height: 0.875rem;
    transition: transform 0.2s ease-in-out;
  }

  .project-card:hover .link-icon {
    transform: translate(2px, -2px);
  }

  .project-headline {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--secondary-text);
  }

  .project-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0.5rem 0 0 0;
    padding: 0;
    list-style: none;
  }

  .project-stack li {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--accent);
    background-color: var(--accent-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
  }
</style>
