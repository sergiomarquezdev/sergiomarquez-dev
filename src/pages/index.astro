---
import About from "../components/About.astro";
import Certifications from "../components/Certifications.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import { cv } from "../data/cv";
import Layout from "../layouts/Layout.astro";

const seo = {
	title: "Sergio Márquez - Python AI Developer",
	description:
		"Portfolio of Sergio Márquez, a Python AI & Backend Developer focused on FastAPI services, LLM integrations, and pragmatic automations.",
};

const { basics, experience, projects, certifications } = cv;
---

<Layout title={seo.title} description={seo.description}>
  <About basics={basics} />
  <Experience experience={experience} />
  <Projects projects={projects} />
  <Certifications certifications={certifications} />
</Layout>
