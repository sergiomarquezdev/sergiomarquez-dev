name: üöÄ CI/CD - Build & Validate (Cloudflare Pages Deploy)

on:
  push:
    branches:
      - main
    paths-ignore:
      - "**.md"
      - ".editorconfig"
      - ".gitignore"
      - "docs/**"
  pull_request:
    branches:
      - main
    paths-ignore:
      - "**.md"
      - ".editorconfig"
      - ".gitignore"
      - "docs/**"
  workflow_dispatch:

permissions:
  contents: read

jobs:
  # üß™ Testing & Quality Assurance
  test-and-validate:
    name: üîç Quality Assurance
    runs-on: ubuntu-latest
    timeout-minutes: 20

    steps:
      - name: üì• Checkout code
        uses: actions/checkout@v5.0.0

      - name: ‚öôÔ∏è Set up Node.js 22.x
        uses: actions/setup-node@v4.4.0
        with:
          node-version: 22.x
          cache: "npm"

      - name: üì¶ Install dependencies
        run: npm ci

      - name: üîé TypeScript validation
        run: |
          echo "üîç Running TypeScript check..."
          npm run type-check
          echo "‚úÖ TypeScript validation passed!"

      - name: üßπ ESLint code quality
        run: |
          echo "üßπ Running ESLint..."
          npm run lint
          echo "‚úÖ Code quality check completed!"

      - name: üíÑ Prettier formatting check
        run: |
          echo "üíÑ Checking code formatting..."
          npm run format:check
          echo "‚úÖ Code formatting validated!"

      - name: üîç Security audit
        run: |
          echo "üîç Running security audit..."
          npm audit --audit-level=moderate
          echo "‚úÖ Security audit completed!"

      - name: üì¶ Dependency validation
        run: |
          echo "üì¶ Validating dependencies..."
          npm ls --depth=0
          echo "‚úÖ Dependencies validated!"

  # üèóÔ∏è Build Validation (Cloudflare handles actual deployment)
  build-validation:
    name: üèóÔ∏è Build Validation
    runs-on: ubuntu-latest
    needs: test-and-validate
    timeout-minutes: 20

    steps:
      - name: üì• Checkout code
        uses: actions/checkout@v5.0.0

      - name: ‚öôÔ∏è Set up Node.js 22.x
        uses: actions/setup-node@v4.4.0
        with:
          node-version: 22.x
          cache: "npm"

      - name: üì¶ Install dependencies
        run: npm ci

      - name: üèóÔ∏è Build Astro portfolio
        run: |
          echo "üèóÔ∏è Building Astro portfolio..."
          npm run build
          echo "‚úÖ Build completed successfully!"
          echo "üåê Deployment will be handled by Cloudflare Pages"

      - name: üìä Verify build output & metrics
        run: |
          echo "üìä Build metrics:"
          echo "üìÅ Build output size:"
          du -sh dist/

          echo ""
          echo "üìÑ Generated files breakdown:"
          HTML_COUNT=$(find dist/ -name "*.html" | wc -l)
          JS_COUNT=$(find dist/ -name "*.js" | wc -l)
          CSS_COUNT=$(find dist/ -name "*.css" | wc -l)

          echo "üìÑ HTML files: $HTML_COUNT"
          echo "üìú JS files: $JS_COUNT"
          echo "üé® CSS files: $CSS_COUNT"

          echo ""
          echo "üéØ Portfolio validation:"
          if [ "$HTML_COUNT" -ge 5 ]; then
            echo "‚úÖ HTML pages: $HTML_COUNT (target: 5+)"
          else
            echo "‚ö†Ô∏è HTML pages: $HTML_COUNT (expected: 5+)"
          fi

          echo ""
          echo "üåê Ready for Cloudflare Pages deployment"
          echo "   ‚Ä¢ Auto-deploy on main branch push"
          echo "   ‚Ä¢ Preview deploys on PRs"

      - name: üß™ Test site preview
        run: |
          echo "üß™ Testing site preview..."
          timeout 15s npm run preview > preview.log 2>&1 || true
          echo "‚úÖ Preview test completed"

          # Check if preview started successfully
          if grep -q "Local:" preview.log; then
            echo "‚úÖ Preview server started successfully"
          else
            echo "‚ÑπÔ∏è Preview test completed (timeout expected)"
          fi

  # ü§ñ Auto-Fix Common Issues
  auto-fix-issues:
    name: ü§ñ Auto-Fix & Dependencies
    runs-on: ubuntu-latest
    if: failure() && github.ref == 'refs/heads/main'
    needs: [test-and-validate, build-validation]
    timeout-minutes: 15

    steps:
      - name: üì• Checkout code
        uses: actions/checkout@v5.0.0
        with:
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: ‚öôÔ∏è Set up Node.js 22.x
        uses: actions/setup-node@v4.4.0
        with:
          node-version: 22.x
          cache: "npm"

      - name: üîß Auto-fix linting issues
        run: |
          echo "üîß Attempting to auto-fix linting issues..."
          npm ci
          npm run lint:fix || true
          npm run format || true

          # Check if files were modified
          if git diff --quiet; then
            echo "‚ÑπÔ∏è No auto-fixable issues found"
          else
            echo "üîß Auto-fixed some issues, committing..."
            git config --local user.email "action@github.com"
            git config --local user.name "GitHub Action Auto-Fix"
            git add .
            git commit -m "ü§ñ Auto-fix: ESLint and Prettier formatting

            - Applied automatic linting fixes
            - Standardized code formatting
            - Triggered by failed CI pipeline
            - Cloudflare Pages will auto-deploy these fixes"
            git push
          fi

      - name: üîÑ Update dependencies (if needed)
        run: |
          echo "üîÑ Checking for dependency updates..."

          # Check for security vulnerabilities
          if npm audit --audit-level=moderate; then
            echo "‚úÖ No critical security issues"
          else
            echo "üîß Attempting to fix security issues..."
            npm audit fix --force || true

            if ! git diff --quiet package*.json; then
              echo "üì¶ Dependencies updated, committing..."
              git add package*.json
              git commit -m "üîí Security: Auto-update vulnerable dependencies

              - Fixed security vulnerabilities via npm audit fix
              - Automated dependency security update
              - Cloudflare Pages will deploy these security fixes"
              git push
            fi
          fi
