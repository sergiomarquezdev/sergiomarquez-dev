name: ü§ñ Auto-Fix Common Issues

on:
  workflow_dispatch:
    inputs:
      fix_type:
        description: 'Type of fix to apply'
        required: true
        default: 'all'
        type: choice
        options:
          - all
          - linting
          - dependencies
          - formatting
          - security

  schedule:
    # Run weekly maintenance on Sundays at 2 AM
    - cron: '0 2 * * 0'

permissions:
  contents: write
  pull-requests: write

jobs:
  auto-fix:
    name: üîß Automated Maintenance
    runs-on: ubuntu-latest
    timeout-minutes: 20

    steps:
      - name: üì• Checkout code
        uses: actions/checkout@v5.0.0
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          fetch-depth: 0

      - name: ‚öôÔ∏è Set up Node.js 22.x
        uses: actions/setup-node@v4.4.0
        with:
          node-version: 22.x
          cache: 'npm'

      - name: üì¶ Install dependencies
        run: npm ci

      - name: üßπ Auto-fix linting and formatting
        if: github.event.inputs.fix_type == 'all' || github.event.inputs.fix_type == 'linting' || github.event.inputs.fix_type == 'formatting'
        run: |
          echo "üßπ Running auto-fix for linting and formatting..."

          # Save current state
          git stash push -m "Pre-autofix state" || true

          # Apply fixes
          npm run lint:fix || true
          npm run format || true

          # Check for changes
          if ! git diff --quiet; then
            echo "‚úÖ Applied auto-fixes"
            echo "LINTING_FIXED=true" >> $GITHUB_ENV
          else
            echo "‚ÑπÔ∏è No linting issues to fix"
            echo "LINTING_FIXED=false" >> $GITHUB_ENV
          fi

      - name: üîí Security updates
        if: github.event.inputs.fix_type == 'all' || github.event.inputs.fix_type == 'security'
        run: |
          echo "üîí Checking for security updates..."

          # Check for vulnerabilities
          if npm audit --audit-level=moderate; then
            echo "‚úÖ No security vulnerabilities found"
            echo "SECURITY_FIXED=false" >> $GITHUB_ENV
          else
            echo "üîß Applying security fixes..."
            npm audit fix --force || true

            if ! git diff --quiet package*.json; then
              echo "‚úÖ Applied security updates"
              echo "SECURITY_FIXED=true" >> $GITHUB_ENV
            else
              echo "‚ÑπÔ∏è No automatic security fixes available"
              echo "SECURITY_FIXED=false" >> $GITHUB_ENV
            fi
          fi

      - name: üì¶ Dependency updates
        if: github.event.inputs.fix_type == 'all' || github.event.inputs.fix_type == 'dependencies'
        run: |
          echo "üì¶ Checking for dependency updates..."

          # This is a conservative approach - only patch updates
          # Major/minor updates should be handled by Dependabot PRs
          # CRITICAL: Tailwind CSS excluded due to Astro compatibility

          echo "‚ÑπÔ∏è Dependency updates handled by Dependabot"
          echo "‚ÑπÔ∏è Tailwind CSS updates excluded (Astro compatibility)"
          echo "‚ÑπÔ∏è Only security fixes applied automatically"
          echo "DEPS_UPDATED=false" >> $GITHUB_ENV

      - name: üß™ Verify fixes don't break anything
        run: |
          echo "üß™ Testing that fixes don't break the build..."

          # Run full validation
          npm run validate
          npm run build

          echo "‚úÖ All fixes verified successfully"

      - name: üìù Create commit with fixes
        run: |
          echo "üìù Checking if commits are needed..."

          if ! git diff --quiet; then
            echo "üìù Committing automated fixes..."

            git config --local user.email "action@github.com"
            git config --local user.name "GitHub Action Auto-Fix Bot"

            # Prepare commit message
            COMMIT_MSG="ü§ñ Automated maintenance fixes

            - üßπ Applied ESLint and Prettier fixes
            - üîí Applied security updates if any
            - ‚ö†Ô∏è Tailwind CSS excluded (Astro compatibility)

            Automated maintenance run on $(date -u +'%Y-%m-%d %H:%M:%S UTC')"

            git add .
            git commit -m "$COMMIT_MSG"
            git push origin main

            echo "‚úÖ Fixes committed and pushed successfully"
          else
            echo "‚ÑπÔ∏è No changes to commit"
          fi

      - name: üìä Summary report
        if: always()
        run: |
          echo "üìä Auto-fix Summary Report"
          echo "=========================="
          echo "üïê Run time: $(date -u +'%Y-%m-%d %H:%M:%S UTC')"
          echo "üéØ Fix type: ${{ github.event.inputs.fix_type || 'scheduled' }}"
          echo ""
          echo "‚úÖ Automated maintenance completed"
          echo "‚ö†Ô∏è Tailwind CSS updates excluded (Astro compatibility)"
          echo "‚ÑπÔ∏è Check git log for any applied fixes"
          npm run validate

      - name: Create Pull Request
        uses: peter-evans/create-pull-request@v5
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: "chore: update dependencies"
          title: "üîÑ Weekly dependency updates"
          body: |
            Automated dependency updates.

            - Dependencies updated to latest versions
            - Security vulnerabilities fixed
            - All tests passing

            Please review and merge if all checks pass.
          branch: dependency-updates
          delete-branch: true
</file>

